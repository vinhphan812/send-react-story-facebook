{
	"name": "facebook",
	"description": "facebook",
	"manifest_version": 2,
	"version": "0.0.1",

	"background": {
		"scripts": ["./src/background.js"],
		"persistent": true
	},
	"browser_action": {
		"default_popup": "popup.html"
	},
	"permissions": [
		"tabs",
		"activeTab",
		"webRequest",
		"webRequestBlocking",
		"https://*.facebook.com/*",
		"https://*.messenger.com/*"
	]
}
